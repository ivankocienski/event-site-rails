- content_for(:title) { "Upcoming Events" }

- if @geo_enclosure.present?
  %h1 Events in <em>#{@geo_enclosure.name}</em>
  %p= link_to 'Show events anywhere', events_path

- else
  %h1 Events

= form_tag events_path, method: :get do
  = text_field_tag 'day', '', placeholder: 'yyyy-mm-dd'
  = submit_tag 'Show on day'

.events-listing= render_event_by_day_list(@event_instances)
