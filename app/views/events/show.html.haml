%h1= @event.name

-# FIXME: multi-day events
%h2
  - if @event.end_date.present?
    From <em>#{@event.start_date.strftime(EventsHelper::DATE_TIME_FORMAT)}</em>
    to <em>#{@event.end_date.strftime(EventsHelper::DATE_TIME_FORMAT)}</em>
  - else
    At <em>#{@event.start_date.strftime(EventsHelper::DATE_TIME_FORMAT)}</em>
  on #{@event.start_date.strftime(EventsHelper::DATE_DAY_FORMAT)}

%p
  By #{link_to @event.organizer.name, partner_path(@event.organizer.id)}
  - if @event.address.present?
    &mdash; (#{@event.address.to_s})

%p= @event.description

- if @event.publisher_url.present?
  %p= external_link_to @event.publisher_url, text: 'More info'

- if @upcoming_partner_events.present?
  %br
  %br
  %hr

  %h2 Other events from #{@event.organizer.name}

  .partner-event-list
    %h3= @upcoming_partner_events.first.start_date.strftime(EventsHelper::DATE_DAY_FORMAT)
    = render_partner_event_by_day_list(@upcoming_partner_events)
